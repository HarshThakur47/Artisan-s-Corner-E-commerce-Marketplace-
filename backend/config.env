NODE_ENV=development
PORT=5000

# MongoDB Connection - Choose one option:

# Option 1: Local MongoDB (if you have MongoDB installed locally)
MONGODB_URI=mongodb://localhost:27017/artisans-corner

# Option 2: MongoDB Atlas (replace with your actual connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/artisans-corner?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=artisans_corner_jwt_secret_2024_make_this_long_and_secure

# Cloudinary Configuration (get these from cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay Configuration (get these from razorpay.com - FREE for Indian businesses)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret
